@import '../../assets/styles/mixins.styl'

.barMain
    font-size rem(28)
    height rem(100)    
    .bar
        display flex
        width 100%
        height 100%
        border-bottom rem(1) solid #efefef
        background-color #fff
        font-size rem(30)
        color #4A4A4A
        text-align center
        z-index 9
        position relative
        align-items center
        .item
            overflow hidden
            flex 1
            padding 0 rem(20)
            height 100%
            display flex
            align-items center
            .text
                overflow hidden
                flex 1
                white-space nowrap
                text-overflow ellipsis
                padding-right rem(30)
                position relative
                &::after
                    position absolute
                    left 80%
                    top 30%
                    content ''
                    border-width rem(12)
                    border-style solid
                    border-color #333 transparent transparent;
            &.actived
                .text
                    &::after
                        top -5%                    
                        border-color  transparent transparent #333;
                        
    .bgCover
        z-index 8
        // display none
        position fixed
        left 0
        right 0
        top 0
        bottom 0
        background-color rgba(0, 0, 0, .7)