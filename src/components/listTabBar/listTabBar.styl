@import '../../assets/styles/mixins.styl'

.barMain
    font-size rem(28)
    height rem(100)    
    .bar
        display flex
        width 100%
        height 100%
        // border-bottom rem(1) solid #efefef
        box-shadow 0 rem(2) 0 0 #BCBAB6
        background-color #fff
        font-size rem(30)
        color #4A4A4A
        text-align center
        z-index 9
        position relative
        .item
            overflow hidden
            flex 1
            height 100%            
            .tabown
                display flex
                padding 0 rem(20)                
                align-items center
                height 100%
                width 100%
                box-sizing border-box
            .text
                overflow hidden
                flex 1
                white-space nowrap
                text-overflow ellipsis
                padding-right rem(30)
                position relative
                &::after
                    position absolute
                    transition all .3s              
                    left 80%
                    top 30%
                    content ''
                    border-width rem(12)
                    border-style solid
                    border-color #333 transparent transparent
            .tabDetail
                position absolute
                width 100%
                left 0
                top rem(101)
                max-height rem(585)
                background-color #eee
                overflow hidden
                font-size rem(30)
                display none
                .detailMain
                    display flex
                    height 100%
                    width 100%
                    overflow hidden
                    .clos                        
                        max-height rem(585)
                        overflow-y scroll
                        &.clos:first-child
                            width 30%
                        .lineCell
                            height rem(90)
                            line-height rem(90)
                            box-sizing border-box
                            padding 0 rem(20)
                            width 100%
                            border-bottom rem(1) solid #f5f5f5
                            &.slected
                                color #f50

                        
                    .mainCell
                        flex 1
                        .cellItem
                            width 100%
                            border-bottom rem(1) solid #e5e5e5
                            box-sizing border-box
                            padding 0 rem(30)
                            overflow hidden
                            text-overflow ellipsis
                            height rem(90)
                            line-height rem(90)
                            position relative
                            background-color #fff
                            text-align left
                            &.selected
                                color #f50
                                &::after
                                    position absolute
                                    content ''
                                    height rem(36)
                                    width rem(20)
                                    box-sizing border-box
                                    border rem(4) solid #f50
                                    border-left 0
                                    border-top 0
                                    right rem(12)
                                    top 50%
                                    transform translate(0, -60%) rotate(45deg)

            &.actived
                .tabDetail
                    display block
                .text
                    color #f50
                    &::after
                        top -5%
                        transform rotate(180deg)
                        border-color #f50 transparent transparent
    .bgCover
        z-index 8
        display none
        position fixed
        left 0
        right 0
        top 0
        bottom 0
        background-color rgba(0, 0, 0, .7)
        &.show
            display block
